<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/noofguess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="Guess the age to reap the soul.."
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#18ffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nogh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="40dp"
                    android:text="Guess:"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#18ffff"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/guessedage"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@id/nogh"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:hint="   age..."
                    android:inputType="number" />
            </LinearLayout>

            <Button
                android:id="@+id/guess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/edittextstyle"
                android:text="GUESS" />
        </LinearLayout>

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Result"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#18ffff"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/colours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:paddingRight="8dp"
                android:scaleType="centerCrop"
                android:scaleY="1"
                android:src="@drawable/title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="The colours will guide you to the right age...The closer you are to the right age,closer you will be to the green background :)
"
                android:textColor="#18ffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/win"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="win"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/lost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="lost"
                android:textColor="@android:color/white"
                android:textSize="25dp" />
        </LinearLayout>

        <Button
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/edittextstyle"
            android:onClick="reset"
            android:paddingHorizontal="20dp"
            android:text="End Game" />


    </LinearLayout>
</ScrollView>